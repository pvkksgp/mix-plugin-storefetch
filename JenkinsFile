pipeline {
    agent any
    environment {
        BUILD_VERSION = "1.0.${currentBuild.number}"
    }
    tools {
        maven 'M3'
    } 
    stages{        
        stage('Build') {
            steps {
                echo "Starting Build..."
                sh "mvn clean verify -Dbuild.version=${env.BUILD_VERSION}"
                echo "Build: ${currentBuild.currentResult}"
            }
            post {
                success {
                    echo "...Build Succeeded for ${env.BUILD_VERSION}: ${currentBuild.currentResult}"
                } 
                unsuccessful {
                    echo "...Build Failed for ${env.BUILD_VERSION}: ${currentBuild.currentResult}"
                }
            }
        }
        
        stage('Upload Artifact') {
            steps {
                script {
                    echo "Uploading Artifact..."
                    configFileProvider([configFile(fileId: '12cfbfe5-64a5-4489-a09d-8d382482b16e', targetLocation: 'settings.xml', variable: 'MAVEN_SETTINGS_XML')]) {
                        sh 'mvn -U --batch-mode -Dbuild.version=${env.BUILD_VERSION} -s $MAVEN_SETTINGS_XML clean package install deploy'
                    }
                    echo "Artifact Uploaded: ${currentBuild.currentResult}"
                }
            }
            post {
                success {
                    echo "...Artifact Upload Succeeded for ${env.BUILD_VERSION}: ${currentBuild.currentResult}"
                } 
                unsuccessful {
                    echo "...Artifact Upload Failed for ${env.BUILD_VERSION}: ${currentBuild.currentResult}"
                }
            }
        }                  
    }

   post {
       success {       		 		
           echo "All Good: ${env.BUILD_VERSION}"
       }
       unsuccessful {
           echo "Not So Good: ${env.BUILD_VERSION}"
       }      
       always {       		
           echo "Pipeline result: ${currentBuild.result}"
           echo "Pipeline currentResult: ${currentBuild.currentResult}"
       }
   }
   
}